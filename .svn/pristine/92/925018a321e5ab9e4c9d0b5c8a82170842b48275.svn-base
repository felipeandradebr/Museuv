<%= form_for(@genero) do |f| %>
  <% if @genero.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@genero.errors.count, "erro") %> - falha ao salvar Genero:</h2>

      <ul>
      <% @genero.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <form id="FormCadastrarGênero">
    <table border="0" cellpadding="10" cellspacing="0" class="table_geral">
        <tr>
            <td>
                Descrição:
            </td>
            <td>
                <%= f.text_field :descricao %>
            </td>
            <td style="width: 800px;">
            </td>
        </tr>
        <tr>
            <td>
                Família:
            </td>
            <td>
                <%= f.select :familia_id, Familium.find(:all).collect { |item| [item.descricao,item.id] },{:include_blank => "Não Identificado"} %>
            </td>
            <td style="width: 800px;">
            </td>
        </tr>
        <tr>
            <td>
                Situação:
            </td>
            <td>
                <%= f.radio_button "status", "1", { :checked => true } %> Ativo
				<%= f.radio_button "status", "0" %> Inativo
            </td>
            <td style="width: 800px;">
            </td>
        </tr>
    </table>
    <br />
    <table border="0" cellpadding="10" cellspacing="0" class="table_geral">
        <tr>
            <td>
                <%= f.submit "Salvar"%>
            </td>
            <td>
                <input id="btnCancelar" type="button" value="Cancelar" onclick="javascript:window.location='/generos'" />
            </td>
            <td style="width: 800px;">
            </td>
        </tr>
    </table>
    </form>
<% end %>
