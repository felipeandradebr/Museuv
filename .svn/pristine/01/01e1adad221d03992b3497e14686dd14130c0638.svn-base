<h1>Login</h1>

<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<%= form_tag session_path do %>
  <div class="field">
    <%= label_tag "Usuário" %><br />
    <%= text_field_tag :usuario %>
  </div>
  <div class="field">
    <%= label_tag "Senha" %><br />
    <%= password_field_tag :hashed_password %>
  </div>
  <div class="actions">
    <%= submit_tag 'Login' %>
  </div>
<% end %>