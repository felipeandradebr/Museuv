body
{
    width: 900px;
    margin-left: auto;
    margin-right: auto;
}
label
{
    background-color: #35cc9c;
    color: White;
    font-weight: bold;
}


/* login */
.login
{
    margin: auto;
    height: 100px;
    width: 300px;
    padding-top: 200px;
}

/* tables */
.table_geral
{
    width: 900px;
}
table
{
    border-collapse: collapse;
    border: 1px solid #839E99;
    font: .9em/1.2em Georgia, "Times New Roman" , Times, serif;
    color: #033;
}

#tb1
{
    border: none;
    background: none;
}

table thead tr th
{
   text-align:center;
   height: 20px;
}



tbody th
{
    background: white;
}

tbody tr
{
    background: white;
}

caption
{
    font-size: 1.3em;
    font-weight: bold;
    text-align: left;
    padding: 1em 4px;
}
td, th
{
    padding: 3px 3px 3px 3px;
    line-height: 1.3em;
}
th
{
    background: #839E99;
    color: #fff;
    font-size: 14px;
    text-align: left;
    padding-right: .5em;
    vertical-align: top;
    background: white;
}
thead th
{
    background: #35cc9c; /*text-align: center;*/
    height: 30px;
}

td a, td a:link
{
    color: #325C91;
}
td a:visited
{
    color: #466C8E;
}
td a:hover, td a:focus
{
    color: #1E4C94;
}
th a, td a:active
{
    color: #fff;
}
tfoot th, tfoot td
{
    background: #2C5755;
    color: #fff;
}
th + td
{
    padding-left: .5em;
}

/*estilo para o menu*/

#menu
{
    background: #35cc9c;
    width: 900px;
    height: 35px;
}

#menu li
{
    height: 27px;
    padding-top: 5px;
    margin: 0;
}

ul li
{
    border: none;
}

ul
{
    list-style: none;
}

li
{
    width: 170px;
    padding: 3px;
    position: relative;
    text-decoration: none;
    font-weight: bold;
    background: #35cc9c;
    color: white;
}

li:hover
{
    background-color: white;
    color: #35cc9c;
    text-decoration: none;
    height: 40px;
}

ul li a
{
    color: white;
    text-decoration: none;
}

a:hover
{
    color: #35cc9c;
    background: white;
}

/*submenu*/
li > ul
{
    position: absolute;
    left: 87px;
    top: -1px;
    color: black;
}
/*fim submenu*/

#menu ul#menu2 > li
{
    float: left;
}

#menu ul#menu2 > li > ul
{
    left: -40px;
    top: 35px;
}
