<h1>Cadastrar Usuário</h1>

<%= form_for(@usuario) do |f| %>

  <h4>Nome</h4>
  <%= f.text_field :nome%>
  
  <h4>Email</h4>
  <%= f.text_field :email%>
  
  <h4>Função</h4>
  <%= f.text_field :funcao%>
  
  <h4>Usuário</h4>
  <%= f.text_field :usuario%>
  
  <h4>Senha</h4>
  <%= f.password_field :senha%>
  
  <h4>Status</h4>
    
	<%= f.radio_button 'status', '1', { :checked => true } %> Ativo
	<%= f.radio_button 'status', '0' %> Inativo
  <br>
  <%= f.submit "Cadastrar" %>
<% end %>