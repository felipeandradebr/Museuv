<%= form_for(@genero) do |f| %>
  <% if @genero.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@genero.errors.count, "erro") %> - falha ao salvar Genero:</h2>

      <ul>
      <% @genero.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Descrição" %><br />
    <%= f.text_field :descricao %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.radio_button 'status', '1', { :checked => true } %> Ativo
	<%= f.radio_button 'status', '0' %> Inativo
  </div>

  <div class="field">
    <%= f.label "Família" %><br />
    <%= f.select :familia_id, Familium.find(:all).collect { |item| [item.descricao,item.id] },{:include_blank => 'Não Identificado'} %>
  </div>
  <div class="actions">
    <%= f.submit "Salvar"%>
  </div>
<% end %>
