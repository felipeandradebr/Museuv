	<%= form_for(@ordem) do |f| %>
		<% if @ordem.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@ordem.errors.count, "error") %> prohibited this orden from being saved:</h2>
				<ul>
				<% @ordem.errors.full_messages.each do |msg| %>
					<ol><%= msg %></ol>
				<% end %>
				</ul>
			</div>
	<% end %>	
    <form id="FormCadastrarOrdem">
    <table border="0" cellpadding="10" cellspacing="0" class="table_geral">
        <tr>
            <td>
                Descrição:
            </td>
            <td>
                <%= f.text_field :descricao %>
            </td>
            <td style="width: 800px;">
            </td>
        </tr>
        <tr>
            <td>
                Classe:
            </td>
            <td>
                <%= f.select :clase_id, Clase.find(:all).collect { |item| [item.descricao,item.id] } , {:include_blank => "Não Identificado"}%>
            </td>
            <td style="width: 800px;">
            </td>
        </tr>
        <tr>
            <td>
                Situação:
            </td>
            <td>
                    <%= f.radio_button "status", "1", { :checked => true } %> Ativo
					<%= f.radio_button "status", "0" %> Inativo
            </td>
            <td style="width: 800px;">
            </td>
        </tr>
    </table>
    <br />
    <table border="0" cellpadding="10" cellspacing="0" class="table_geral">
        <tr>
            <td>
                <%= f.submit "Cadastrar" %>
            </td>
            <td>
                <input id="btnCancelar" type="button" value="Cancelar" onclick="javascript:window.location='/ordems'"/>
            </td>
            <td style="width: 800px;">
            </td>
        </tr>
    </table>
    </form>
	<% end %>
</body>
</html>
