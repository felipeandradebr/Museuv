<%= form_for(@familium) do |f| %>
  <% if @familium.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@familium.errors.count, "erro") %> - falha ao salvar Família:</h2>

      <ul>
      <% @familium.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :descricao %><br />
    <%= f.text_field :descricao %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.radio_button 'status', '1', { :checked => true } %> Ativo
	<%= f.radio_button 'status', '0' %> Inativo
  </div>
 
  <div class="field">
    <%= f.label :ordem %><br />
    <%= f.select :ordem_id, Ordem.find(:all).collect { |item| [item.descricao,item.id] },{:include_blank => 'Não Identificado'} %>
  </div>
  <div class="actions">
    <%= f.submit "Salvar"%>
  </div>
<% end %>
