	<%= form_for(@familium) do |f| %>
		<% if @familium.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@familium.errors.count, "error") %> prohibited this familium from being saved:</h2>
				<ul>
					<% @familium.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
    <form id="FormCadastrarFamília">
    <table border="0" cellpadding="10" cellspacing="0" class="table_geral">
        <tr>
            <td>
                Descrição:
            </td>
            <td>
                <%= f.text_field :descricao %>
            </td>
            <td style="width: 800px;">
            </td>
        </tr>
        <tr>
            <td>
                Ordem:
            </td>
            <td>
                <%= f.select :ordem_id, Ordem.find(:all).collect { |item| [item.descricao,item.id] } , {:include_blank => "Não Identificado"}%>
            </td>
            <td style="width: 800px;">
            </td>
        </tr>
        <tr>
            <td>
                Situação:
            </td>
            <td>
                <%= f.radio_button "status", "1", { :checked => true } %> Ativo
				<%= f.radio_button "status", "0" %> Inativo
            </td>
            <td style="width: 800px;">
            </td>
        </tr>
    </table>
    <br />
    <table border="0" cellpadding="10" cellspacing="0" class="table_geral">
        <tr>
            <td>
                <%= f.submit "Cadastrar" %>
            </td>
            <td>
                <input id="btnCancelar" type="button" value="Cancelar" onclick="javascript:window.location='/familia'" />
            </td>
            <td style="width: 800px;">
            </td>
        </tr>
    </table>
    </form>
	<% end %>

