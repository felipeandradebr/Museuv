    <div id="box">
    	<h4 align="center"><hr />Gênero<hr /></h4>
    			<form>
    			<table cellspacing="0" id="tab">
                    
					<tr>
                        <td>Filo:</td>
                        <% @familia.each do |familium| %>
							<% if @genero.familia_id  == familium.id %>
								<% @ordems.each do |ordem| %>
									<% if familium.ordem_id == ordem.id %>
										<% @clases.each do |clase| %>
											<% if ordem.clase_id == clase.id %>
												<% @filos.each do |filo| %>
													<% if clase.filo_id == filo.id %>
														<td><%= filo.descricao %></td>
													<% end %>
												<% end %>
											<% end %>
										<% end %>
									<% end %>
								<% end %>
							<% end %>
						<% end %>
                    </tr>
                    <tr>
            			<td>Classe:</td>
            			<% @familia.each do |familium| %>
							<% if @genero.familia_id  == familium.id %>
								<% @ordems.each do |ordem| %>
									<% if familium.ordem_id == ordem.id %>
										<% @clases.each do |clase| %>
											<% if ordem.clase_id == clase.id %>
												<td><%= clase.descricao %></td>
											<% end %>
										<% end %>
									<% end %>
								<% end %>
							<% end %>
						<% end %>
            		</tr>
                    <tr>
            			<td>Ordem:</td>
            			<% @familia.each do |familium| %>
							<% if @genero.familia_id  == familium.id %>
								<% @ordems.each do |ordem| %>
									<% if familium.ordem_id == ordem.id %>
										<td><%= ordem.descricao %></td>
									<% end %>
								<% end %>
							<% end %>
						<% end %>
						
						
            		</tr>
                    <tr>
            			<td>Família:</td>
						<% @familia.each do |familium| %>
							<% if @genero.familia_id  == familium.id %>
								<td><%= familium.descricao %></td>
							<% end %>
						<% end %>
						
            		</tr>
                    <tr>
            			<td><b>Gênero:</b></td>
            			<td><b>  <%= @genero.descricao %></b></td>
            		</tr>
