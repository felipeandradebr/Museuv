
    <h2>Espécie</h2>
    <form id="FormBusca">
    Nova Espécie:
    <input type="button" id="maisGenero" value="+" onclick="javascript:window.location='/especs/new'" />
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    Busca:
    <input id="txtNome" type="text" />
    <input id="btnBusca" type="button" value="OK" />
    </form>
    <br />
    <table id="tb2" border="1" cellpadding="0" cellspacing="0" class="table_geral">
        <thead>
            <tr>
                <th width="225px">
                    Descrição
                </th>
                <th width="225px">
                    Gênero
                </th>
                <th width="225px">
                    Status
                </th>
            </tr>
        </thead>
        <tbody>
            <tr class="odd">
				<% @especs.each do |espec| %>
                <td width="225px">
                    <%= link_to espec.descricao, edit_espec_path(espec) %> 
                </td>
                <td width="225px">
                    <%= espec.genero_id %>
                </td>
                <td width="225px">
                    <%= espec.status %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>